<div class="container block-with-spacing-bottom" id='services-navigation'>
  <div class="heading-block text-center">
    <h2><%=t 'services.services_we_provide' %></h2>
    <p><%=t 'services.today_sahaporn_paragraph' %></p>
  </div>

  <div class="row">
    <% url = ['industrial-parts', 'specific-design', 'from-idea-to-reality', 'mass-production'] %>
    <% 4.times do |i| %>
      <div class="col-sm-3 col-xs-12">
        <% link_to localized_path("/services/#{url[i]}") do %>
          <div class="col-xs-4 col-sm-12 service-square-image image-container-3"><%= image_tag "services/service-#{i+1}-square.png" %></div>
          <div class="col-xs-8 col-sm-12 service-detail">
            <h5><%=t "services.service_#{i+1}_title" %></h5>
            <p><%=t "services.service_#{i+1}_description" %></p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
