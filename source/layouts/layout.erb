<!doctype html>
<html>
  <head>
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta charset="utf-8">
    <meta content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" name="viewport">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Middleman" %></title>

    <link href='https://fonts.googleapis.com/css?family=Work+Sans:400,300,600' rel='stylesheet' type='text/css'>
    <%= stylesheet_link_tag :site %>
  </head>

  <body class="<%= page_classes %>">
    <!-- NAV BAR -->
    <nav id='topnav' class="navbar">
      <div class="container">
        <div class="navbar-header">
          <button class="navbar-toggle collapsed" data-toggle="collapse" data-target="#topnav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>

          <div class="navbar-brand">
            <div class="text-primary"><b><%= t('shared.topnav.company_name') %></b></div>
          </div>
        </div>

        <div class="navbar-right horizontal-nav hidden-xs">
          <%= partial 'topnav_link' %>
        </div>

        <div id="topnav-collapse" class="vertical-nav collapse">
          <%= partial 'topnav_link' %>
        <div>
      </div>
    </nav>

    <%= yield %>

    <script src="https://code.jquery.com/jquery-2.2.4.min.js" integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>
    <%= javascript_include_tag :all %>
  </body>
</html>
